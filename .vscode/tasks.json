{
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "${workspaceFolder}/compile.sh",
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "my build",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/*.cpp",
                "-o",
                "${fileDirname}/main",
                "-pedantic", "-Wall", "-Wextra", "-Werror"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}